    "phpunit.paths": {},
    "[php]": {
        "editor.defaultFormatter": "kokororin.vscode-phpfmt",
        "editor.formatOnSave": true
    },
    // "php.validate.executablePath": "C:\\wamp64\\bin\\php\\php8.2.0",
    "phpfmt.passes": [
        "IndentTernaryConditions",
        "PHPDocTypesToFunctionTypehint",
        "ReindentAndAlignObjOps",
        "ReplaceBooleanAndOr",
        "SpaceBetweenMethods"
    ],
    "phpfmt.exclude": [
        "GeneratePHPDoc",
        "AutoPreincrement",
        "SmartLnAfterCurlyOpen",
        "PHPDocTypesToFunctionTypehint"
    ],
    "workbench.settings.applyToAllProfiles": [
        "terminal.integrated.cursorStyle",
        "terminal.integrated.defaultProfile.windows",
        "terminal.integrated.tabs.defaultColor",
        "terminal.integrated.tabs.defaultIcon"
    ],
    "terminal.integrated.tabs.defaultColor": "terminal.ansiGreen",
    "terminal.integrated.tabs.defaultIcon": "github-alt",
    "terminal.integrated.cursorStyle": "line",
    
    // Set the default
    "editor.formatOnSave": false,
    "workbench.editor.enablePreview": false,
    "terminal.integrated.letterSpacing": 2,
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "block",
    "editor.cursorSmoothCaretAnimation": "on",
    "workbench.tree.indent": 15,
    "window.commandCenter": false,
    "css.lint.important": "warning",
    "scss.lint.important": "warning",
    "debug.toolBarLocation": "docked",
    "editor.lineNumbers": "interval",
    "workbench.tree.renderIndentGuides": "always",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "php": true
    },
    "editor.renderWhitespace": "none",
    "editor.guides.bracketPairs": "active",
    "editor.guides.highlightActiveIndentation": false,
    "editor.guides.indentation": false,
    "editor.guides.bracketPairsHorizontal": true,
    "glassit.alpha": 255, 
    "glassit.step": 5,
    "workbench.iconTheme": "symbols",
    "workbench.colorTheme": "Material Theme Ocean High Contrast",
    "editor.minimap.showSlider": "always",
    "editor.minimap.maxColumn": 100,
    "editor.scrollbar.horizontalScrollbarSize": 6,
    "editor.scrollbar.ignoreHorizontalScrollbarInContentHeight": true,
    "laravel-pint.enable": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "symbols.hidesExplorerArrows": false,
    "explorer.compactFolders": false,
    "window.customTitleBarVisibility": "windowed",
    "editor.stickyScroll.enabled": true,
    "security.promptForLocalFileProtocolHandling": false,
    "update.mode": "manual",
    "workbench.activityBar.location": "hidden",
    "github.copilot.editor.enableAutoCompletions": true,
